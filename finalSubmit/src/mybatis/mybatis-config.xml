<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

	<!-- mybatis를 이용하여 VO에 리턴값을 받을때 카멜케이스 적용 ( bo_no -> boNo ) -->
	<settings>
		<setting name="mapUnderscoreToCamelCase" value="true"/>
	</settings>
 
 	<typeAliases>
 		<typeAlias type="com.legend.conv.notice.vo.NoticeVO" alias="NoticeVO" />
 		<typeAlias type="com.legend.conv.notice.vo.PagingVO" alias="PagingVO" />
 		<typeAlias type="com.legend.conv.notice.vo.SearchVO" alias="SearchVO" />
 		<typeAlias type="com.legend.conv.attach.vo.AttachVO" alias="AttachVO" />
 		<typeAlias type="com.legend.conv.board.vo.BoardVO" alias="BoardVO" />
 		<typeAlias type="com.legend.conv.voc.vo.VocVO" alias="VocVO" />	
 		<typeAlias type="com.legend.conv.member.vo.MemberVO" alias="MemberVO" />	
 	</typeAliases>
	
</configuration>